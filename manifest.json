{
  "manifest_version": 2,
  "name": "Baixar Audio Direct",
  "version": "1.0.0",
  "description": "Maneira simples de baixar mensagem de voz no Direct do Instagram",
  "icons": {
    "128": "icon/icon128.png",
    "48": "icon/icon48.png",
    "16": "icon/icon16.png"
  },
  "browser_action": {
    "default_icon": "icon/icon16.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.instagram.com/direct/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "permissions": [
    "tabs"
  ]
}